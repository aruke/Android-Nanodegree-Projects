<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.rajanikant.joker.MainFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/welcome_face_description"
        android:src="@drawable/welcome_face" />

    <com.dd.CircularProgressButton
        android:id="@+id/fragment_main_button_tell_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:textColor="#FFF"
        app:cpb_textIdle="@string/tell_me_a_joke"
        app:cpb_selectorIdle="@color/colorPrimary"
        app:cpb_colorProgress="@color/colorPrimary"
        app:cpb_colorIndicatorBackground="@color/colorPrimary" />

</LinearLayout>
